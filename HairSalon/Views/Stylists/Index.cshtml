@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

@if (Model.Count == 0 && ViewBag.SearchFlag == 0)
{
  <p>There are no stylists to display, please add a stylist.</p>
}
else if (Model.Count == 0 && ViewBag.SearchFlag == 1)
{
  <p>Your search returned no results.</p>
}
<form action="/stylists/new" method="get">
  <button type="submit" class="btn btn-primary mb-3">Add New Stylist</button>
</form>
@foreach (Stylist stylist in Model)
{
  @Html.Partial("StylistCard", stylist)
}