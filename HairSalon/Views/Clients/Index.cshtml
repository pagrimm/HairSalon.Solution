@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

@if (Model.Count == 0 && ViewBag.SearchFlag == 0)
{
  <p>There are no clients to display, please add a client.</p>
}
else if (Model.Count == 0 && ViewBag.SearchFlag == 1)
{
  <p>Your search returned no results.</p>
}
<form action="/clients/new" method="get">
  <button type="submit" class="btn btn-primary mb-3">Add New Client</button>
</form>
@foreach (Client client in Model)
{
  @Html.Partial("ClientCard", client)
}